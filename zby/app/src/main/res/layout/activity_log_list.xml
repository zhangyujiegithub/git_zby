<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/header_log_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isVisbleAddIco="true"
        app:isVisbleBackIco="true"
        app:isVisbleFilterIco="true"
        app:titleText="普通日志" />

    <com.biaozhunyuan.tianyi.view.BoeryunSearchView
        android:id="@+id/search_view_log_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.biaozhunyuan.tianyi.common.view.PullToRefreshAndLoadMoreListView
            android:id="@+id/lv_log_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0.1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false" />

    </RelativeLayout>

</LinearLayout>