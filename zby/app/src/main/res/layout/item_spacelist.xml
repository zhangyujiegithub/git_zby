<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root_notice_item"
        style="@style/style_list_item_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="0dp">
        <TextView
            android:id="@+id/tv_title_notice_item"
            style="@style/style_title_red"
            android:text="通知标题" />

        <!--<TextView-->
            <!--android:id="@+id/tv_title_notice_item"-->
            <!--style="@style/style_title_red"-->
            <!--android:text="通知标题" />-->

        <View style="@style/style_line_horizontal_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <com.biaozhunyuan.tianyi.common.view.CircleImageView
                android:id="@+id/iv_head_item_notice_list"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/default_head" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_creater_notice_item"
                        style="@style/style_tittle_text_list"
                        android:text="李洁洁" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time_notice_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="8月23日 10:30"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/style_list_item_pading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content_notice_item"
                style="@style/style_list_text_content_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:minLines="3" />

            <com.biaozhunyuan.tianyi.view.MultipleAttachView
                android:id="@+id/multi_attach_notice_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="5"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/style_list_item_pading"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/nl_item_log_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_log_comment"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ico_list_comment_new" />

                <TextView
                    android:id="@+id/tv_comment_count_log_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textColor="@color/tv_share_light_grey"
                    android:textSize="13sp" />
            </LinearLayout>

            <View style="@style/style_line_vertical" />

            <LinearLayout
                android:id="@+id/nl_item_log_support"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_log_support"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ico_list_support_new" />

                <TextView
                    android:id="@+id/tv_support_count_log_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textColor="@color/tv_share_light_grey"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>