<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.biaozhunyuan.tianyi.common.view.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/icon_home_attendance_new" />


    <TextView
        android:id="@+id/tv_board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="考勤"
        android:textColor="@color/titlecolor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:visibility="invisible"
        android:text="(只在有数据时显示)"
        android:textColor="@color/text_time"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:padding="5dp"
        android:src="@drawable/icon_board_setting_move" />

    <ImageView
        android:id="@+id/iv_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:padding="5dp"
        android:src="@drawable/iv_board_hidden" />


</LinearLayout>