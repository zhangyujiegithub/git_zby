<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <com.biaozhunyuan.tianyi.common.view.CircleImageView
        android:id="@+id/head_item_contact_list"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/default_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_contact_item"
                style="@style/style_tittle_text_list"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="李洁洁"
                android:textColor="@color/text_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_status_item_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/project_stage_bg"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLines="1"
                android:maxEms="6"
                android:ellipsize="end"
                android:paddingTop="3dp"
                android:text="成交客户"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_time_contact_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="17dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="10:37"
                android:textColor="@color/text_time"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/content_contact_list"
            style="@style/style_content_text_list"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginBottom="5dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/list_content"
            android:textSize="14sp" />

        <com.biaozhunyuan.tianyi.view.MultipleAttachView
            android:id="@+id/attach_item_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:numColumns="5"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_item_log_support"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_log_support"
                    android:layout_width="14dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_support" />

                <TextView
                    android:id="@+id/tv_support_count_log_item"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="18"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_log_comment"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_log_comment"
                    android:layout_width="14dp"
                    android:layout_height="13dp"
                    android:background="@drawable/icon_comment" />

                <TextView
                    android:id="@+id/tv_comment_count_log_item"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="27"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>


</LinearLayout>
