<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.biaozhunyuan.tianyi.common.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/tv_excutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行人"
            android:textColor="@color/text_gray"
            android:textSize="13sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/task_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="6dp"
        android:padding="7dp"
        android:src="@drawable/icon_status_" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_content"
            style="@style/style_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="任务内容"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_excutor_name"
            style="@style/style_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text=""
            android:textSize="13sp" />

        <TextView
            android:id="@+id/time_item_task_list"
            style="@style/style_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text=""
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
