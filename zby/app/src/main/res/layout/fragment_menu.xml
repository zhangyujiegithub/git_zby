<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/crop_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_shouwen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_home_task_new" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="收文"
                android:textColor="@color/text_title_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fawen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"
                android:src="@drawable/icon_home_addtask" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="发文"
                android:textColor="@color/text_title_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qianbao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_home_apply_new" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="签报"
                android:textColor="@color/text_title_black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_kuadi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:id="@+id/menu_icon"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_home_business_new" />

            <TextView
                android:id="@+id/menu_tv"
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="印章使用"
                android:textColor="@color/text_title_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bumen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_home_genjinjilu_new" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="印章领用"
                android:textColor="@color/text_title_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ruanjian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:src="@drawable/icon_home_test_new" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="阅件登记"
                android:textColor="@color/text_title_black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>