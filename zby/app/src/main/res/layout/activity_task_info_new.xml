<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
            android:id="@+id/header_task_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:filterImgSrc="@drawable/ic_calendar_filter"
            app:isVisbleAddIco="false"
            app:isVisbleBackIco="true"
            app:isVisbleFilterIco="false"
            app:isVisbleRightText="true"
            app:titleRightText="编辑"
            app:titleText="任务详情" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <com.biaozhunyuan.tianyi.common.view.CircleImageView
                        android:id="@+id/iv_head_task_info"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/default_head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11sp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name_task_info"
                            style="@style/style_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李晓云" />

                        <TextView
                            android:id="@+id/tv_time_task_info"
                            style="@style/style_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="16:37" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/content_task_info"
                    style="@style/style_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:text="" />

                <View style="@style/bold_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_status_selected" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="当前状态:" />

                    <TextView
                        android:id="@+id/task_info_status"
                        style="@style/style_right_text"
                        android:text="" />

                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_right" />

                </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_stage_blue" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="项目:" />

                    <TextView
                        android:id="@+id/task_info_project"
                        style="@style/style_right_text"
                        android:text="" />

                </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_stage_blue" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="任务类型:" />

                    <TextView
                        android:id="@+id/task_info_type"
                        style="@style/style_right_text"
                        android:text="普通任务" />

                </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_task_new_participant" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="执行人:" />

                    <TextView
                        android:id="@+id/task_info_excutor"
                        style="@style/style_right_text"
                        android:text="" />

                </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_task_info_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal">-->

                    <!--<ImageView-->
                        <!--android:layout_width="15dp"-->
                        <!--android:layout_height="15dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:src="@drawable/icon_task_new_participant" />-->

                    <!--<TextView-->
                        <!--style="@style/style_left_text"-->
                        <!--android:text="任务类型:" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/task_info_type"-->
                        <!--style="@style/style_right_text"-->
                        <!--android:text="" />-->

                <!--</LinearLayout>-->

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="2dp"-->
                    <!--android:background="@color/dividerColor" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_stage_blue" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="周期类型:" />

                    <TextView
                        android:id="@+id/task_info_peroid_type"
                        style="@style/style_right_text"
                        android:text="" />

                </LinearLayout>

                    <View style="@style/style_line_horizontal_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_stage_blue" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="周期日:" />

                    <TextView
                        android:id="@+id/task_info_period_date"
                        style="@style/style_right_text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_task_new_participant" />

                    <TextView
                        style="@style/style_left_text"
                        android:text="参与人:" />

                    <TextView
                        android:id="@+id/task_info_participant"
                        style="@style/style_right_text"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="" />

                </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_task_new_time" />

                    <TextView
                        android:id="@+id/tv_task_info_starttime"
                        style="@style/style_left_text"
                        android:text="开始时间:" />

                    <TextView
                        android:id="@+id/task_info_beginTime"
                        style="@style/style_right_text"
                        android:text="" />

                </LinearLayout>


                <View style="@style/style_line_horizontal_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_task_new_time" />

                    <TextView
                        android:id="@+id/tv_task_info_endtime"
                        style="@style/style_left_text"
                        android:text="结束时间:" />

                    <TextView
                        android:id="@+id/task_info_overTime"
                        style="@style/style_right_text"
                        android:text="" />

                </LinearLayout>

                <View style="@style/style_line_horizontal_middle" />

                <com.biaozhunyuan.tianyi.common.view.NoScrollListView
                    android:id="@+id/lv_attach_list"
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="12dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tv_viewcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:text="浏览102次"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_support"
                            android:layout_width="14dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_support_select" />

                        <TextView
                            android:id="@+id/tv_support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="0"
                            android:textColor="@color/color_support_text_like"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="14dp"
                            android:layout_height="12dp"
                            android:layout_marginLeft="32dp"
                            android:src="@drawable/icon_comment" />

                        <TextView
                            android:id="@+id/tv_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="0"
                            android:textColor="#999999"
                            android:textSize="13sp" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_support_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_support_full" />

                    <TextView
                        android:id="@+id/tv_support_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="赵某如、李晓云" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#FAFAFA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="16dp"
                        android:text="全部评论"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#EEEEEE" />

                    <com.biaozhunyuan.tianyi.common.view.NoScrollListView
                        android:id="@+id/spaceinfo_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/list_divider"
                        android:listSelector="@drawable/list_view_gary_selector"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_nocomment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:text="暂无评论"
                        android:textColor="#555555"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.biaozhunyuan.tianyi.view.BottomCommentView
        android:id="@+id/comment_log_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
</RelativeLayout>
