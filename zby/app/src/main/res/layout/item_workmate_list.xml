<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_add_client_contract_sort"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_list"
        android:paddingLeft="10dp"
        android:text="A"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.biaozhunyuan.tianyi.common.view.AvatarImageView
        android:id="@+id/head_item_workmate"
        android:layout_width="@dimen/head_portrait_size"
        android:layout_height="@dimen/head_portrait_size"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/default_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_client_contract_sort" />

    <TextView
        android:id="@+id/position_item_workmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:background="@drawable/apply_list_item_status_bg_yiwancheng"
        android:ellipsize="end"
        android:maxEms="6"
        android:maxLines="1"
        android:padding="1dp"
        android:text="普通员工"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_item_workmate"
        app:layout_constraintStart_toEndOf="@+id/name_item_workmate"
        app:layout_constraintTop_toTopOf="@+id/name_item_workmate" />

    <TextView
        android:id="@+id/name_item_workmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/text_name"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/head_item_workmate"
        app:layout_constraintTop_toBottomOf="@id/tv_add_client_contract_sort"
        tools:text="name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_phone"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/name_item_workmate"
        app:layout_constraintTop_toBottomOf="@+id/name_item_workmate" />

    <TextView
        android:id="@+id/tel_item_workmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/text_time"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_client_phone"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/landline_item_workmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/text_time"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />
    <!--app:layout_constraintBottom_toBottomOf="@+id/imageView4"-->
    <!--app:layout_constraintTop_toTopOf="@+id/imageView4"-->


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="11dp"
        android:layout_height="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_email"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/email_item_workmate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_time"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tel_item_workmate"
        app:layout_constraintRight_toRightOf="@id/iv_call_phone_workmate"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />


    <ImageView
        android:id="@+id/iv_send_message"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/icon_send_message"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_client_contract_sort" />

    <ImageView
        android:id="@+id/iv_call_phone_workmate"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_call_phone"
        app:layout_constraintEnd_toStartOf="@id/iv_send_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_client_contract_sort" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_send_ems"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/iv_call_phone_workmate"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_client_contract_sort" />

</android.support.constraint.ConstraintLayout>