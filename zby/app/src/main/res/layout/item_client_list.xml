<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_product_list"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_head_adviser" />

        <TextView
            android:id="@+id/staff_name_item_client_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="理财师名称"
            android:textColor="@color/hanyaRed"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/client_type_item_client_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_style_hanya"
            android:padding="3dp"
            android:text="个人"
            android:textColor="@color/fuzhuselan"
            android:textSize="12sp" />
    </LinearLayout>

    <View style="@style/small_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.biaozhunyuan.tianyi.common.view.CircleImageView
            android:id="@+id/iv_head_item_client_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/client_name_item_client_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="客户名称"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/client_time_item_client_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/text_info"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>