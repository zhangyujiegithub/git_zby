<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/status_bar_height"-->
        <!--android:background="@color/statusbar_mine"-->
        <!--&gt;</View>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/fragment_home_mine_bg_new"
                android:clickable="true">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageView2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/icon_invite"
                    android:padding="5dp" />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/icon_share"
                    android:padding="5dp" />

                <com.biaozhunyuan.tianyi.common.view.CircleImageView
                    android:id="@+id/imageViewCamera1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/default_head" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageViewCamera1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_userinfo_setting_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_userinfo_setting_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="position"
                        android:textColor="#ccffffff"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_setting_tixing"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_setting_tixing"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_new_notice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_setting_tixing"
                android:text="提醒设置"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_icon_arrow_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/arrow_right_new" />

            <TextView
                android:id="@+id/tv_setting_tixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_setting_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_set_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_mine_psw_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_set_password"
                android:text="修改密码"
                android:textColor="@color/text_mine"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_icon_right_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:src="@drawable/icon_mine_right_new" />


        </RelativeLayout>

        <View
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"></View>

        <RelativeLayout
            android:id="@+id/rl_setting_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_setting_clear_cache"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_mine_cliear_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_setting_clear_cache"
                android:text="清除缓存"
                android:textColor="@color/text_mine"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_icon_arrow_right_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:src="@drawable/icon_mine_right_new"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_setting_clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </RelativeLayout>
        <View
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"></View>
        <RelativeLayout
            android:id="@+id/rl_download"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_mine_zxing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_download"
                android:text="扫码下载"
                android:textColor="@color/text_mine"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:src="@drawable/icon_mine_right_new"  />


        </RelativeLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="10dp"-->
            <!--android:background="@color/color_theme_bg" />-->
    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"></View>
        <RelativeLayout
            android:id="@+id/rl_setting_current_version"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_setting_version"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_mine_version" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_setting_version"
                android:text="当前版本"
                android:textColor="@color/text_mine"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_version_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="V 1.0"
                android:textColor="#2DA8FF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_question"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_question"
                android:text="问题反馈"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/arrow_right_new" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_url_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:clickable="true"
            android:gravity="center_horizontal"
            >

            <Button
                android:layout_marginTop="37dp"
                android:id="@+id/btn_quit_setting"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="214dp"
                android:layout_height="33dp"
                android:background="@drawable/mine_logout_bg"
                android:text="退出登录"
                android:textColor="#666666"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
