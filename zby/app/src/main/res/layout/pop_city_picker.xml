<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom">
    
    <View 
        android:id="@+id/top_city_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView 
            android:id="@+id/tv_address_city_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="5dp"
            android:text="地址"/>
        <Button
            android:id="@+id/btn_sure_city_picker"
            style="@style/style_button_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        	android:gravity="center"
            android:padding="5dp"
            android:text="确 定" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_city_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="center"
        android:orientation="horizontal">
        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/wheel_province"
            android:layout_height="wrap_content"
            android:layout_width="0dp" 
            android:layout_weight="2.2"/>
        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/wheel_city"
            android:layout_height="wrap_content"
            android:layout_width="0dp" 
            android:layout_weight="2.5"/>
        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/wheel_county"
            android:layout_height="wrap_content"
            android:layout_width="0dp" 
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>