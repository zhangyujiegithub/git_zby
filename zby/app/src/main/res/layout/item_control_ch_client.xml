<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_root_item_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv_ch"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_red_star_ch_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red"
                android:text="*"
                android:visibility="gone"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minHeight="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_control_ch_client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="字段名称"
                    android:textColor="#a7a4a4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_statuts_control_ch_client"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/black"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5">

                <LinearLayout
                    android:id="@+id/ll_clientBiz_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <com.biaozhunyuan.tianyi.view.LastInputEditText
                        android:id="@+id/et_value_control_ch_client"
                        style="@style/style_text_normal_black"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:minHeight="60dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_message_control_ch_client"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/selector_header_half"
                        android:src="@drawable/ico_message"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_img_control_ch_client"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_right_arrow_gray" />

                    <TextView
                        android:id="@+id/tv_id_control_ch_client"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_clientBiz_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|right"
                    android:minHeight="60dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_clentBiz_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_single_no_choose" />

                    <TextView
                        android:id="@+id/tv_clentBiz_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="先生"
                        android:textColor="@color/color_text_item_content"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_clentBiz_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_single_no_choose" />

                    <TextView
                        android:id="@+id/tv_clentBiz_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女士"
                        android:textColor="@color/color_text_item_content"
                        android:textSize="14sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/style_line_horizontal_middle"
        android:background="@color/tv_splint_light_grey" />

</LinearLayout>