<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_000"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_send_doc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_icon_send_doc" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="发文管理"
                android:textColor="@color/text_title_black"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_icon_sign" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="签报管理"
                android:textColor="@color/text_title_black"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_seal_use"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:id="@+id/menu_icon"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_icon_seal_use" />

            <TextView
                android:id="@+id/menu_tv"
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="印章管理"
                android:textColor="@color/text_title_black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_111"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
            android:id="@+id/ll_take_break"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_icon_take_break" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="请假管理"
                android:textColor="@color/text_title_black"
                android:textSize="14sp" />
        </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_business"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new_icon_leave" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="出差管理"
                android:textColor="@color/text_title_black"
                android:textSize="14sp" />
        </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_laowu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.biaozhunyuan.tianyi.view.NumImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_yiqing" />

            <TextView
                style="@style/style_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="临时劳务"
                android:textColor="@color/text_title_black"
                android:textSize="14sp" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_renyuanzhaopin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_information" />
                <TextView
                    style="@style/style_content_all"
                    android:text="人员招聘" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_gangweipinyong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_guide" />
                <TextView
                    style="@style/style_content_all"
                    android:text="岗位聘用" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qiyebianzhi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_guide" />
                <TextView
                    style="@style/style_content_all"
                    android:text="企业编制" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_zhigong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_information" />
                <TextView
                    style="@style/style_content_all"
                    android:text="内部调动" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_renyuanwaijie"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_guide" />
                <TextView
                    style="@style/style_content_all"
                    android:text="人员外借" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_diaochushenpi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_guide" />
                <TextView
                    style="@style/style_content_all"
                    android:text="调出审批" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qiyebeian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_information" />
                <TextView
                    style="@style/style_content_all"
                    android:text="工资备案" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_lingdaoyinsichuguo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_guide" />
                <TextView
                    style="@style/style_content_all"
                    android:text="因私出国" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_chuguoshenqing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_information" />
                <TextView
                    style="@style/style_content_all"
                    android:text="出国申请" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_zhaoshoushenqing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.biaozhunyuan.tianyi.view.NumImageView
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/new_icon_guide" />
                <TextView
                    style="@style/style_content_all"
                    android:text="招收申请" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
