<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_list"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/style_header_layout"
        android:gravity="center">


        <Button
            android:id="@+id/btn_cancel_date_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="取消"
            android:textColor="@color/text_info"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title_date_wheel"
            style="@style/title_common"
            android:text="选取时间" />


        <Button
            android:id="@+id/btn_ok_date_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="确定"
            android:textColor="@color/color_bule"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/year_wheel"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1.6"
            android:visibility="gone" />

        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/month_wheel"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/day_wheel"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1.5" />

        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/hour_wheel"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <com.biaozhunyuan.tianyi.wheel.widget.WheelView
            android:id="@+id/mins_wheel"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1" />
    </LinearLayout>

    <View style="@style/small_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp"
        android:visibility="gone"
        android:weightSum="2"></LinearLayout>

</LinearLayout>
