<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/bg_round_blue" />

        <TextView
            style="@style/style_left_text"
            android:text="状态"
            android:textColor="@color/text_black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_all_status_popup"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/bg_half_gray"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_ing_status_popup"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/bg_half_gray"
            android:gravity="center"
            android:text="进行中"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_done_status_popup"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/bg_half_gray"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/text_black"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_late_status_popup"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/bg_half_gray"
            android:gravity="center"
            android:text="已逾期"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_cancle_status_popup"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/bg_half_gray"
            android:gravity="center"
            android:text="已取消"
            android:textColor="@color/text_black"
            android:textSize="17sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_status_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:listSelector="@null"
        android:numColumns="3"
        android:padding="10dp"
        android:verticalSpacing="15dp" />

    <RelativeLayout
        android:id="@+id/rl_gray_task_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_half_gray" />

</LinearLayout>