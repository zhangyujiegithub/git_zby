<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/popup_include_project_title"></include>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动日期 :"
            android:textColor="#333333"
            />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/project_popup_etbg"
            />

    </LinearLayout>
    <View style="@style/View_small_line"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称 :"
            android:textColor="#333333"
            />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/project_popup_etbg"
            />

    </LinearLayout>

        <View style="@style/View_small_line"/>


        <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动描述 :"
            android:textColor="#333333"
            />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/project_popup_etbg"
            />

    </LinearLayout>

    <com.biaozhunyuan.tianyi.view.MultipleAttachView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/multi_attach_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="把握度 :"
                android:textColor="#333333"
                />
            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/project_popup_etbg"
                />

        </LinearLayout>

        <View style="@style/View_small_line"/>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下次计划 :"
                android:textColor="#333333"
                />
            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/project_popup_etbg"
                />

        </LinearLayout>

        <View style="@style/View_small_line"/>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下次联系时间 :"
                android:textColor="#333333"
                />
            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/project_popup_etbg"
                />

        </LinearLayout>
        <View style="@style/View_small_line"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下次联系内容 :"
                android:textColor="#333333"
                />
            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/project_popup_etbg"
                />

        </LinearLayout>
        <View style="@style/View_small_line"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注 :"
                android:textColor="#333333"
                />

            <EditText
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_height="50dp"
                android:background="@drawable/project_popup_etbg"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
