<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="right"
    android:clickable="true"
    android:choiceMode="singleChoice"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_taskfilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <!--<ExpandableListView-->
            <!--android:id="@+id/lv_expandable"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:divider="@null"-->
            <!--android:listSelector="#00000000"-->
            <!--/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_drawer_executor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_drawerlayout_task_title"
                        android:text="执行人" />

                    <TextView
                        android:id="@+id/tv_drawer_customer"
                        style="@style/style_drawerlayout_task_info" />

                    <ImageView
                        android:id="@+id/iv_executor"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_right" />

                </LinearLayout>

                <com.biaozhunyuan.tianyi.view.TagFlowLayout
                    android:id="@+id/tgf_task_executor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />

                <View style="@style/small_line"/>

                <LinearLayout
                    android:id="@+id/ll_drawer_project"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_drawerlayout_task_title"
                        android:text="项目" />

                    <TextView
                        android:id="@+id/tv_drawer_project"
                        style="@style/style_drawerlayout_task_info" />

                    <ImageView
                        android:id="@+id/iv_project"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_right" />

                </LinearLayout>

                <com.biaozhunyuan.tianyi.view.TagFlowLayout
                    android:id="@+id/tgf_task_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />
                <View style="@style/small_line"/>
                <LinearLayout
                    android:id="@+id/ll_drawer_dept"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_drawerlayout_task_title"
                        android:text="部门" />

                    <TextView
                        android:id="@+id/tv_drawer_dept"
                        style="@style/style_drawerlayout_task_info" />

                    <ImageView
                        android:id="@+id/iv_dept"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_right" />

                </LinearLayout>

                <com.biaozhunyuan.tianyi.view.TagFlowLayout
                    android:id="@+id/tgf_task_dept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />
                <View style="@style/small_line"/>
                <LinearLayout
                    android:id="@+id/ll_drawer_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_drawerlayout_task_title"
                        android:text="任务类型" />

                    <TextView
                        android:id="@+id/tv_drawer_type"
                        style="@style/style_drawerlayout_task_info" />

                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_right" />

                </LinearLayout>

                <com.biaozhunyuan.tianyi.view.TagFlowLayout
                    android:id="@+id/tgf_task_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />
                <View style="@style/small_line"/>
                <LinearLayout
                    android:id="@+id/ll_drawer_status"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_drawerlayout_task_title"
                        android:text="任务状态" />

                    <TextView
                        android:id="@+id/tv_drawer_status"
                        style="@style/style_drawerlayout_task_info" />

                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_right" />

                </LinearLayout>

                <com.biaozhunyuan.tianyi.view.TagFlowLayout
                    android:id="@+id/tgf_task_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#eeeeee"></View>
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_drawer_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_drawer_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_red"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_staffList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_right_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="成员列表"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ListView
                android:background="#fafafa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:id="@+id/drawerlayout_lv"></ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_adduser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/task_board_adduser_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_adduser" />

            <TextView
                android:id="@+id/tv_adduser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:layout_marginLeft="5dp"
                android:text="添加成员"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>