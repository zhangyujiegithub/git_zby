<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_header_bg"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageViewNew_client"
        android:layout_toRightOf="@+id/imageViewCancel_client"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_categray"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/iv_filter"
            android:padding="5dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_categray"
            android:background="@drawable/shape_edittext_bg_no_squre">

            <ImageView
                android:id="@+id/iv_clear_client_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:src="@drawable/icon_search" />

            <EditText
                android:id="@+id/editTextFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_clear_client_list"
                android:background="@null"
                android:enabled="true"
                android:focusable="true"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dp"
                android:textColorHint="@color/tv_search_grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_speech_client_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:src="@drawable/ico_voice_normal" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>