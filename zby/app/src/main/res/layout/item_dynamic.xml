<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="16dp"
    android:paddingRight="25dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp">

        <!--<com.zlcloud.control.AvartarView
            android:id="@+id/avatar_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

        <com.biaozhunyuan.tianyi.common.view.CircleImageView
            android:id="@+id/avatar_dynamic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/tv_name_dynamic_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#c9383838"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:cardCornerRadius="5dp">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username_dynamic"
            style="@style/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="客户名称"
            android:textColor="@color/text_info"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_content_dynamic"
                style="@style/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/qipao"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="内容"
                android:textColor="#c9383838"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="#c9383838"
            android:textSize="12sp" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>