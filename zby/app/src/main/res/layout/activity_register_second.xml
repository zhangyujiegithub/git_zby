<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep_gray"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/header_find_pass_word"
        style="@style/style_header_layout"
        app:isVisbleAddIco="false"
        app:isVisbleBackIco="true"
        app:isVisbleFilterIco="false"
        app:isVisbleSaveIco="false"
        app:titleText="注册(2/2)" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_register_sec_crop_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_bg_yusheng"
                android:hint="请输入企业名称（必填）"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_register_sec_contact_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_bg_yusheng"
                android:hint="请输入联系人姓名（必填）"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_register_sec_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_bg_yusheng"
                android:hint="请输入密码（必填，至少六位）"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_register_sec_pwd_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_bg_yusheng"
                android:hint="请再次输入密码（必填，至少六位）"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_register_sec_invite_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_edittext_bg_yusheng"
                android:hint="邀请码（选填）"
                android:padding="10dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_btn_bg_sign"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>