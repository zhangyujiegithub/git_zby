<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/pop_voice_order_tv"
        android:text="您可以这样说 : "
        android:textColor="@color/apply_state_yiwancheng"
        android:textSize="20sp" />

    <TextView
        style="@style/pop_voice_order_tv"
        android:text="新建日志"
        android:textColor="@color/actionsheet_blue"
        android:textSize="@dimen/text_order_size" />

    <TextView
        style="@style/pop_voice_order_tv"
        android:text="新建通知"
        android:textColor="@color/apply_state_daishenhe"
        android:textSize="@dimen/text_order_size" />

    <TextView
        style="@style/pop_voice_order_tv"
        android:text="新建任务"
        android:textColor="@color/apply_state_yifoujue"
        android:textSize="@dimen/text_order_size" />

    <TextView
        android:id="@+id/voice_input"
        style="@style/pop_voice_order_tv"
        android:layout_marginTop="20dp"
        android:textColor="@color/cal_line_grey"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_voice_value"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ico_voice_value_default" />

        <com.biaozhunyuan.tianyi.view.WaveView
            android:id="@+id/waveView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"></com.biaozhunyuan.tianyi.view.WaveView>

    </LinearLayout>
</LinearLayout>