<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.biaozhunyuan.tianyi.common.view.CircleImageView
        android:id="@+id/item_home_dynamic_cirhead"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home_dynamic_username"
                style="@style/style_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:text="李晓云"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/item_home_dynamic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/item_dynamic_news_bg"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="新闻"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_home_dynamic_time"
                style="@style/style_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="16:37"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_home_dynamic_content"
            style="@style/style_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="8dp"
            android:text="OA是将现代化办公和计算机网络功能结合起来 的一种新型的办公方式。"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/item_home_dynamic_username"
            app:layout_constraintTop_toBottomOf="@+id/item_home_dynamic_username" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_current_status_apply_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="11dp"
            android:lineSpacingExtra="0.1dp"
            android:text="摘要: "
            android:textColor="#999999"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
