<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boeryun="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client_info_and_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_list"
    android:orientation="vertical"
    tools:context=".client.ClientRelatedInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
            android:id="@+id/header_client_inf_and_contact"
            style="@style/style_header_layout"
            boeryun:isVisbleBackIco="true"
            boeryun:titleText="客户名称" />

        <TextView
            android:id="@+id/tv_client_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="详细"
            android:textColor="@color/text_name"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        style="@style/style_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:layout_gravity="center">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_contact_client_inf_and_contact"
                style="@style/text_style_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_phone_ico_client_inf_and_contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ico_add_contact" />

                <TextView
                    android:id="@+id/tv_phone_client_inf_and_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/iv_phone_ico_client_inf_and_contact"
                    android:layout_toRightOf="@+id/iv_phone_ico_client_inf_and_contact"
                    android:text="13808865432"
                    android:textColor="@color/color_bule" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address_client_inf_and_contact"
                style="@style/text_style_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市海淀区后厂村路"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同:" />

                <TextView
                    android:id="@+id/client_info_contract_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/notice_caiwu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款:" />

                <TextView
                    android:id="@+id/client_info_shoukuan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/notice_caiwu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拜访量:" />

                <TextView
                    android:id="@+id/client_info_baifang_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/notice_caiwu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作计划:" />

                <TextView
                    android:id="@+id/client_info_plan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@color/notice_caiwu" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab_client_related_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_contact_client_related_info"
            style="@style/style_tab_text_default"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab1"
            android:text="联系记录"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_workplan_client_related_info"
            style="@style/style_tab_text_default"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab2"
            android:text="工作计划" />

        <TextView
            android:id="@+id/tv_contract_client_related_info"
            style="@style/style_tab_text_default"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab3"
            android:text="合同" />

        <TextView
            android:id="@+id/tv_receive_client_related_info"
            style="@style/style_tab_text_default"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab4"
            android:visibility="gone"
            android:text="收款" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_file_client_related_info"
            style="@style/style_tab_text_default"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab5"
            android:text="提醒" />

        <TextView
            android:id="@+id/tv_notification_client_related_info"
            style="@style/style_tab_text_default"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab6"
            android:text="文件" />
    </LinearLayout>

    <View
        android:id="@+id/view_client_info"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#26BCBA" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_client_inf_and_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_add_relate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:src="@drawable/tab_more" />

    </RelativeLayout>
</LinearLayout>
