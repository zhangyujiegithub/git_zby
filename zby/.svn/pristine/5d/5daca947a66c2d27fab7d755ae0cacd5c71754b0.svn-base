<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_tag_item">

    <com.biaozhunyuan.tianyi.common.view.CircleImageView
        android:id="@+id/circularAvatar_tag_item"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/default_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circularAvatar_tag_item"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/circularAvatar_tag_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_attentdace_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李晓云"
            android:textColor="#333333"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_attendance_outside_time" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10:13:51"
                android:textColor="#555555"
                android:textSize="14sp" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corners_5dp_gray"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_attendance_dingwei" />

            <TextView
                android:id="@+id/outside_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="朗丽兹西山花园酒店"
                android:textColor="#555555"
                android:textSize="14sp" />

        </LinearLayout>

        <com.biaozhunyuan.tianyi.view.MultipleAttachView
            android:id="@+id/attachView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:numColumns="5"
            android:paddingBottom="5dp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>
