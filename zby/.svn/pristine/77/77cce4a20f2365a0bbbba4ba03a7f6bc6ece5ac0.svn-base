<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.biaozhunyuan.tianyi.view.BoeryunSearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seach_button"></com.biaozhunyuan.tianyi.view.BoeryunSearchView>

    <com.biaozhunyuan.tianyi.common.view.PullToRefreshAndLoadMoreListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:dividerHeight="0.5dp"
        android:divider="@drawable/list_divider"
        android:layout_height="match_parent"></com.biaozhunyuan.tianyi.common.view.PullToRefreshAndLoadMoreListView>

</LinearLayout>