<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_client_contract_sort"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_list"
        android:paddingLeft="10dp"
        android:text="A"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.biaozhunyuan.tianyi.common.view.CircleImageView
            android:id="@+id/head_item_workmate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_item_workmate"
                    style="@style/style_tittle_text_list"
                    android:text="姓名" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_tittle_text_list"
                    android:text="客户编号:"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tel_item_workmate"
                    style="@style/style_right_text"
                    android:text="手机号码"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_tittle_text_list"
                    android:text="手机号:"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/landline_item_workmate"
                    style="@style/style_right_text"
                    android:text="座机号码"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_tittle_text_list"
                    android:text="地址:"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/email_item_workmate"
                    style="@style/style_right_text"
                    android:text="邮箱地址"
                    android:textColor="@color/text_info"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/choose_item_select_user"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_status_selected" />

    </LinearLayout>

</LinearLayout>