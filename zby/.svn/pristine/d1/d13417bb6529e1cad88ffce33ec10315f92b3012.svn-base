<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/headerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isVisbleBackIco="true"
        app:titleText="转发到聊天" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_colore6">

        <include layout="@layout/control_searchview" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_colore6"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="最近聊天"
        android:textColor="@color/text_black"
        android:textSize="17sp" />

    <ListView
        android:id="@+id/lv_conversation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/chat_list_divider_line"
        android:dividerHeight="0.8dp" />

</LinearLayout>