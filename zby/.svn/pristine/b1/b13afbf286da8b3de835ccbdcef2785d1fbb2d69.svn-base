<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/headerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isVisbleBackIco="true"
        app:titleText="群组聊天" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dept"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bg_colore6"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="部门群"
                android:textColor="@color/text_info"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.biaozhunyuan.tianyi.common.view.NoScrollListView
                android:id="@+id/lv_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_group"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bg_colore6"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="群对话"
                android:textColor="@color/text_info"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.biaozhunyuan.tianyi.common.view.NoScrollListView
                android:id="@+id/lv_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>