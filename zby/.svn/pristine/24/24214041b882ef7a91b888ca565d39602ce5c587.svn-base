<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep_gray"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/header_find_pass_word"
        style="@style/style_header_layout"
        app:isVisbleAddIco="false"
        app:isVisbleBackIco="true"
        app:isVisbleFilterIco="false"
        app:isVisbleSaveIco="false"
        app:titleText="找回密码(1/2)" />

    <EditText
        android:id="@+id/et_corpName_find_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edittext_bg_yusheng"
        android:hint="请输入企业名称"
        android:padding="10dp"
        android:textSize="16sp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_userName_find_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_edittext_bg_yusheng"
        android:hint="请输用户名"
        android:textSize="16sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone_find_password"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_edittext_bg_yusheng"
            android:hint="请填写手机号"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_get_code_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_defulat_gray"
            android:padding="10dp"
            android:text="获取验证码"
            android:textSize="14sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_code_find_password"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext_bg_yusheng"
        android:hint="请输入验证码"
        android:padding="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_bg_sign"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>