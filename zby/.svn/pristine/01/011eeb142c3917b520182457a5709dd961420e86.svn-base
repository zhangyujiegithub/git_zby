<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_list"
    android:orientation="vertical">

    <RelativeLayout style="@style/style_header_layout">

        <ImageView
            android:id="@+id/iv_cancel_add_row_details"
            style="@style/style_header_button"
            android:src="@drawable/back_default" />

        <TextView
            style="@style/title_common"
            android:text="添加明细" />

        <ImageView
            android:id="@+id/iv_save_add_row_details"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/default_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/dividerColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_root_add_row_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_info_bg"
                    android:orientation="vertical"></LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>