<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/header_information_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isVisbleAddIco="false"
        app:isVisbleBackIco="true"
        app:titleText="通知公告" />

    <com.biaozhunyuan.tianyi.view.SimpleIndicator
        android:id="@+id/incator_title_information_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:item_count="2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_information_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
