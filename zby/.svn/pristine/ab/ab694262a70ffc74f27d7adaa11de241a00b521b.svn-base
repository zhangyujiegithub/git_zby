<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.biaozhunyuan.tianyi.common.view.CircleImageView
            android:id="@+id/head_item_contact_list"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_advisor_contact_item"
                    style="@style/style_tittle_text_list"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="李洁洁"
                    android:textColor="@color/text_name"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/tv_status_item_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/project_stage_bg"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp"
                    android:text="已解决"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_contact_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    android:text="10:37"
                    android:textColor="@color/text_time"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/content_contact_list"
                style="@style/style_content_text_list"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingRight="10dp"
                android:text="联系内容"
                android:textColor="#666666"
                android:textSize="15sp" />

            <com.biaozhunyuan.tianyi.view.MultipleAttachView
                android:id="@+id/attach_item_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:numColumns="5"
                android:padding="5dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>