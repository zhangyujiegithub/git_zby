<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zl_back"
    android:orientation="vertical">

    <RelativeLayout style="@style/style_header_layout">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:id="@+id/imageViewCancel_register"
            android:src="@drawable/back_default" />

        <TextView
            android:id="@+id/tv_formName_apply_item"
            style="@style/title_common"
            android:text="免费注册" />

        <!--<ImageView
            android:id="@+id/btn_register"
            style="@style/style_header_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/check" />-->
    </RelativeLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/lightgray" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="行业信息"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:id="@+id/ll_register_business_type"
            style="@style/task_style_ll_info"
            android:layout_height="50dp"
            android:clickable="true"
            android:paddingRight="10dp">

            <TextView
                style="@style/task_style_edit_info"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="行业类型"
                android:textColor="@color/lightgray"
                android:textSize="16sp" />

            <!--<EditText
                android:id="@+id/et_register_company"
                style="@style/task_style_edit_info"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:hint="行业类型"
                android:textColorHint="@color/lightgray"
                android:textSize="18sp" />-->

            <TextView
                android:id="@+id/tv_register_business_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text=""
                android:textColor="@color/color_text_item_content"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/ll_register_main_product"
            style="@style/task_style_ll_info"
            android:layout_height="50dp"
            android:clickable="true"
            android:paddingRight="10dp">

            <TextView
                style="@style/task_style_edit_info"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="主营产品 (必填)"
                android:textColor="@color/lightgray"
                android:textSize="16sp" />

            <!--<EditText
                android:id="@+id/et_register_company"
                style="@style/task_style_edit_info"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:hint="行业类型"
                android:textColorHint="@color/lightgray"
                android:textSize="18sp" />-->

            <TextView
                android:id="@+id/tv_register_main_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text=""
                android:textColor="@color/color_text_item_content"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_arrow_right" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_btn_bg_sign"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_register_agree_service"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/ssdk_oks_classic_check_checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_register_service_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="服务条款"
                android:textColor="@color/color_btn_signin"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>