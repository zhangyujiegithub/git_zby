<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="55dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name_form_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="明细表名称"
        android:textColor="@color/text_black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iv_add_form_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ico_header_add"
        android:text="添加明细"
        android:textColor="@color/theme_text"
        android:textSize="14sp" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/richscan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/icon_home_richscan"/>

    <ImageView
        android:id="@+id/iv_show_more_form_detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="14dp"
        android:src="@drawable/arrow_down" />
</LinearLayout>