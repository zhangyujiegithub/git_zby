<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#FAFAFA">


    <ImageView
        android:id="@+id/new_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/new_login_text" />

    <ImageView
        android:id="@+id/new_login_text_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_login_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/new_login_text_easy" />


        <android.support.v7.widget.CardView
            android:id="@+id/new_login_cardview"
            android:clipChildren="false"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/new_login_text_easy"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="30dp">

                <android.support.design.widget.TextInputEditText
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/new_login_icon_exprise"
                    android:id="@+id/et_crop_name_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EEEEEE"
                    android:hint="请输入企业名称"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textColorHint="#999999"
                  />

            </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/new_login_icon_username"
                        android:id="@+id/editTextUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EEEEEE"
                        android:hint="请输入用户名"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                       />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    app:passwordToggleDrawable="@drawable/shape_txinpust"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:drawableStart="@drawable/new_login_icon_password"
                        android:id="@+id/editTextPassWord"
                        android:drawablePadding="10dp"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EEEEEE"
                        android:hint="请输入登录密码"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        />

                </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/buttonLogin"
                        android:layout_marginTop="40dp"
                        android:layout_centerInParent="true"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_newlogin"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_below="@id/new_login_cardview"
        android:layout_marginTop="50dp"
        android:layout_width="125dp"
        android:layout_height="17dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/findpassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记密码"
            android:textSize="13sp"
            android:textColor="#555555"
            />
        <View
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#555555"
            ></View>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="免费注册"
            android:textSize="13sp"
            android:textColor="#555555"
            />

    </LinearLayout>


</RelativeLayout>
