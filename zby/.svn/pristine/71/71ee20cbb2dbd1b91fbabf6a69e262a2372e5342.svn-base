<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.biaozhunyuan.tianyi.common.view.BoeryunHeaderView
        android:id="@+id/header_apply_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isVisbleAddIco="false"
        app:isVisbleBackIco="false"
        app:titleText="中国标准化研究院统一办公平台" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:srlEnablePreviewInEditMode="true">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:id="@+id/ll_information"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_information" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="通知公告"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/ll_guide"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_guide" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="规章制度"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/ll_share"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:visibility="gone"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_share" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="院内共享"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/ll_send_doc"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_send_doc" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="发文管理"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_sign"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_sign" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="签报管理"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_seal_use"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:id="@+id/menu_icon"
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_seal_use" />

                                    <TextView
                                        android:id="@+id/menu_tv"
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="印章管理"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_take_break"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_take_break" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="请假管理"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_business"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/new_icon_leave" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="出差管理"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_yiqing"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/icon_yiqing" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="疫情报备"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </LinearLayout>
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_laowu"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/icon_yiqing" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="临时劳务"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_zhaopinguanli"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/icon_yiqing" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="招聘管理"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_renshibiandong"
                                    android:layout_width="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <com.biaozhunyuan.tianyi.view.NumImageView
                                        android:layout_width="63dp"
                                        android:layout_height="63dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/icon_yiqing" />

                                    <TextView
                                        style="@style/style_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center"
                                        android:text="人事变动"
                                        android:textColor="@color/text_title_black"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="12dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp">


                        <LinearLayout
                            android:id="@+id/ll_need_do"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/new_home_file" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="我的待办"
                                android:textColor="@color/text_black"
                                android:textSize="17sp" />


                            <TextView
                                android:id="@+id/tv_un_read"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/bg_red_unread"
                                android:gravity="center"
                                android:text="16"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/icon_arrow_right_black" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ll_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">


                            <com.biaozhunyuan.tianyi.view.SimpleIndicator
                                android:id="@+id/indicator"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/white"
                                app:down_color="@color/new_theme_blue"
                                app:item_count="2"
                                app:margin_Left="12"
                                app:margin_Right="12"
                                app:selected_text_color="@color/titlecolor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/new_dividerColor" />


                            <TextView
                                android:id="@+id/tv_unread_new"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginLeft="128dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_red_unread"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/tv_unread_old"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="32dp"
                                android:background="@drawable/bg_red_unread"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </FrameLayout>


                        <com.biaozhunyuan.tianyi.view.AutoMaxHeightViewpager
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Translate" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>