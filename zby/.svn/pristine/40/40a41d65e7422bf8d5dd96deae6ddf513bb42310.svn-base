<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.biaozhunyuan.tianyi.view.BoeryunSearchView
        android:id="@+id/seach_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.biaozhunyuan.tianyi.view.BoeryunSearchView>

    <com.biaozhunyuan.tianyi.common.view.PullToRefreshAndLoadMoreListView
        android:id="@+id/lv"
        android:dividerHeight="0.5dp"
        android:divider="@drawable/list_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.biaozhunyuan.tianyi.common.view.PullToRefreshAndLoadMoreListView>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_null_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/gray"
        android:text="暂无"/>
</RelativeLayout>