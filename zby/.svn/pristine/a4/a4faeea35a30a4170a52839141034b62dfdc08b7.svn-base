<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.biaozhunyuan.tianyi.common.view.RoundImageView
            android:id="@+id/iv_attachinfo_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_error"
            app:RoundImageViewRadius="5dp"
            app:type="round" />

        <ImageButton
            android:id="@+id/iv_delte_attachinfo_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/item_close_button"
            android:visibility="gone" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_info"
        android:visibility="invisible"
        android:textSize="11sp" />

</LinearLayout>