<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="border_width" format="dimension" />
    <attr name="border_color" format="color" />
    <attr name="border_overlay" format="boolean" />
    <attr name="fill_color" format="color" />

    <declare-styleable name="toolBar">
        <attr name="mToolBar_title" format="string" />
        <attr name="mToolBar_rightText" format="string" />
        <attr name="mToolBar_background" format="reference" />
        <attr name="mToolBar_titleColor" format="reference" />
        <attr name="mToolBar_backIv" format="reference" />
        <attr name="mToolBar_showBack" format="boolean" />
        <attr name="mToolBar_rightImage" format="reference" />
        <attr name="mToolBar_showRight" format="boolean" />
        <attr name="mToolBar_showRightText" format="boolean" />

    </declare-styleable>
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="wheelview">
        <attr name="gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="textColorOut" format="color" />
        <attr name="textColorCenter" format="color" />
        <attr name="dividerColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="indicator_strokeWidth" format="float" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>
    <!-- 圆角图片 -->
    <declare-styleable name="RoundCornerView">
        <attr name="round_view_radius" format="dimension">
            <flag name="abs_round" value="-1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircularAvatarView">
        <attr name="isShowBottomName" />
        <attr name="cirularViewWidth" />
    </declare-styleable>

    <!--圆进度条-->
    <declare-styleable name="RingProgressBar">
        <attr name="ringColor" format="color" />
        <attr name="ringProgressColor" format="color" />
        <attr name="ringWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsShow" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>


    <!-- 标题栏 控件属性 -->
    <declare-styleable name="BoeryunHeaderView">
        <attr name="isVisbleBackIco" format="boolean" />
        <attr name="isVisbleFilterIco" format="boolean" />
        <attr name="isVisbleSaveIco" format="boolean" />
        <attr name="isVisbleAddIco" format="boolean" />
        <attr name="isVisibleMore" format="boolean" />
        <attr name="isVisbleRightText" format="boolean" />
        <attr name="titleText" format="string" />
        <attr name="titleRightText" format="string" />
        <attr name="filterImgSrc" format="reference" />
        <attr name="addImgSrc" format="reference" />
    </declare-styleable>

    <!--搜索框-->
    <declare-styleable name="BoeryunSearchView">
        <attr name="hintText" format="string" />
    </declare-styleable>

    <!-- 圆形textview -->
    <declare-styleable name="CircleTextView">
        <attr name="border_width" />
        <attr name="border_color" />
        <attr name="fill_color" />
    </declare-styleable>

    <!--日历所需属性-->
    <declare-styleable name="day">
        <attr name="state_current" format="boolean" />
    </declare-styleable>

    <attr name="calendarViewStyle" format="reference" />


    <declare-styleable name="Indicator">
        <attr name="color_indicator" format="color|reference"></attr>
        <attr name="height_indicator_tab" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" />
        <attr name="border_color" />
        <attr name="border_overlay" />
    </declare-styleable>


    <!--气泡图片的-->
    <declare-styleable name="bubble">
        <attr name="bubbleDirection">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>
        <attr name="bubbleArrowWidth" format="dimension" />
        <attr name="bubbleArrowHeight" format="dimension" />
        <attr name="bubbleArrowWhetherCenterVertical" format="boolean" />
        <attr name="bubbleRadius" format="dimension" />
        <attr name="bubbleMarginTop" format="dimension" />
        <attr name="bubbleMarginLeft" format="dimension" />
        <attr name="bubbleStrokeWidth" format="dimension" />
        <attr name="bubbleStrokeColor" format="color" />
        <attr name="bubbleBackGround" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="RoundImageViewRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AvatarImageView">
        <attr name="aiv_TextSizeRatio" format="reference|float" />
        <attr name="aiv_TextMaskRatio" format="reference|float" />
        <attr name="aiv_BoarderColor" format="reference|color" />
        <attr name="aiv_TextColor" format="reference|color" />
        <attr name="aiv_BoarderWidth" format="reference|dimension" />
        <attr name="aiv_ShowBoarder" format="reference|boolean" />
        <attr name="aiv_CornerRadius" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="SignaturePad">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="velocityFilterWeight" format="float" />
    </declare-styleable>


    <declare-styleable name="DragSortListView">
        <attr name="collapsed_height" format="dimension" />
        <attr name="drag_scroll_start" format="float" />
        <attr name="max_drag_scroll_speed" format="float" />
        <attr name="float_background_color" format="color" />
        <attr name="remove_mode">
            <enum name="clickRemove" value="0" />
            <enum name="flingRemove" value="1" />
        </attr>
        <attr name="track_drag_sort" format="boolean"/>
        <attr name="float_alpha" format="float"/>
        <attr name="slide_shuffle_speed" format="float"/>
        <attr name="remove_animation_duration" format="integer"/>
        <attr name="drop_animation_duration" format="integer"/>
        <attr name="drag_enabled" format="boolean" />
        <attr name="sort_enabled" format="boolean" />
        <attr name="remove_enabled" format="boolean" />
        <attr name="drag_start_mode">
            <enum name="onDown" value="0" />
            <enum name="onMove" value="1" />
            <enum name="onLongPress" value="2"/>
        </attr>
        <attr name="drag_handle_id" format="integer" />
        <attr name="fling_handle_id" format="integer" />
        <attr name="click_remove_id" format="integer" />
        <attr name="use_default_controller" format="boolean" />
    </declare-styleable>


    <declare-styleable name="XImageView">
        <!-- 初始化状态时, 如果图片小于 view 的尺寸，是否需要适应view的尺寸-->
        <attr name="initType" format="enum" >
            <enum name="fitViewMin" value="1" />
            <enum name="fitViewMax" value="2" />
            <enum name="fitImage" value="4" />
            <enum name="fitViewMinImageMin" value="8" />
        </attr>

        <attr name="doubleType" format="enum">
            <enum name="fitViewMinViewMax" value="1" />
            <enum name="fitImageMinViewMax" value="2" />
            <enum name="fitViewMinImageMax" value="4" />
            <enum name="fitImageMinImageMax" value="8" />
        </attr>

    </declare-styleable>
</resources>